# Chat with DB - Deployment Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Path to the energy database file
DATABASE_PATH=C:/Users/arjun/Desktop/PSPreport/power_data.db

# =============================================================================
# API CONFIGURATION
# =============================================================================
# API server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
API_HOST=0.0.0.0
# API server port
API_PORT=8000
# API base URL for frontend configuration
API_BASE_URL=http://localhost:8000
# Enable auto-reload for development (set to false for production)
RELOAD=false
# Number of worker processes (set to 1 if RELOAD=true)
API_WORKERS=4

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# LLM provider type: "ollama", "openai", "anthropic", etc.
LLM_PROVIDER_TYPE=ollama
# LLM API key (required for OpenAI, Anthropic, etc.)
LLM_API_KEY=
# LLM model name
LLM_MODEL=llama3.2:3b
# LLM base URL (for local models like Ollama)
LLM_BASE_URL=http://localhost:11434

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Enable GPU acceleration (if available)
ENABLE_GPU_ACCELERATION=false
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Enable structured logging
ENABLE_STRUCTURED_LOGGING=true
# Enable query safety checks
ENABLE_QUERY_SAFETY_CHECK=true
# Maximum query length
MAX_QUERY_LENGTH=1000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable CORS (set to false for production if not needed)
ENABLE_CORS=true
# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# SQL execution timeout in seconds
SQL_TIMEOUT=30
# Maximum rows returned per query
MAX_ROWS=1000
# Enable SQL validation
ENABLE_SQL_VALIDATION=true
# Enable sandbox testing
ENABLE_SANDBOX_TESTING=true

# =============================================================================
# MONITORING
# =============================================================================
# Enable Prometheus metrics
ENABLE_PROMETHEUS=true
# Enable request logging
ENABLE_REQUEST_LOGGING=true
# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
