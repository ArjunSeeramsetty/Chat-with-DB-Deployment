# =============================================================================
# ENHANCED CHAT-WITH-DB DEPLOYMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables needed for the enhanced AI/ML application
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=production
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary database (Azure SQL Database)
DATABASE_TYPE=mssql
DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net:1433/database?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no

# Alternative: Component-based configuration
MSSQL_SERVER=powerflow-server.database.windows.net
MSSQL_DATABASE=Powerflow
MSSQL_USERNAME=Arjun
MSSQL_PASSWORD=your_password_here
MSSQL_PORT=1433
MSSQL_ENCRYPT=true
MSSQL_TRUST_SERVER_CERTIFICATE=false

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Primary LLM Provider (Gemini 2.5 Flash-Lite - Most Cost Efficient)
LLM_PROVIDER_TYPE=gemini
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_TOP_P=0.8
GEMINI_TOP_K=40

# Alternative LLM Providers (Fallback Options)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_BASE_URL=https://api.openai.com/v1

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

GOOGLE_AI_API_KEY=your_google_ai_api_key_here
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Qdrant Vector Database
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=your_qdrant_api_key_here

# Alternative: ChromaDB
CHROMA_DB_PATH=/app/vector_db
CHROMA_DB_HOST=localhost
CHROMA_DB_PORT=8000

# =============================================================================
# GOOGLE CLOUD DEPLOYMENT
# =============================================================================
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_CLOUD_ZONE=us-central1-a

# Artifact Registry
ARTIFACT_REGISTRY_LOCATION=us-central1
ARTIFACT_REGISTRY_REPOSITORY=chat-with-db-repo

# Cloud Run
CLOUD_RUN_BACKEND_SERVICE=chat-with-db-backend
CLOUD_RUN_FRONTEND_SERVICE=chat-with-db-frontend

# =============================================================================
# AZURE SQL DATABASE
# =============================================================================
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_SUBSCRIPTION_ID=your_subscription_id

# =============================================================================
# AI/ML COMPONENTS CONFIGURATION
# =============================================================================
# Wren AI Integration
WREN_AI_ENABLED=true
WREN_AI_MODEL_PATH=/app/models/wren_ai
WREN_AI_CACHE_SIZE=1000

# Semantic Engine
SEMANTIC_ENGINE_ENABLED=true
SEMANTIC_ENGINE_MODEL=sentence-transformers/all-MiniLM-L6-v2
SEMANTIC_ENGINE_CACHE_SIZE=500

# Agentic Framework
AGENTIC_FRAMEWORK_ENABLED=true
AGENTIC_WORKFLOW_TIMEOUT=300
AGENTIC_MAX_AGENTS=10

# Entity Recognition
ENTITY_RECOGNITION_ENABLED=true
ENTITY_CACHE_SIZE=200
ENTITY_RELOAD_INTERVAL=3600

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
ENABLE_METRICS=true
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json
METRICS_PORT=9090

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# SECURITY AND AUTHENTICATION
# =============================================================================
SECRET_KEY=your_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["https://your-frontend-domain.com", "http://localhost:3000"]
FRONTEND_ORIGIN=https://your-frontend-domain.com

# =============================================================================
# PERFORMANCE AND SCALING
# =============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=300

# Caching
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_GPU_ACCELERATION=false
ENABLE_VECTOR_SEARCH=true
ENABLE_SEMANTIC_PROCESSING=true
ENABLE_AGENTIC_WORKFLOWS=true
ENABLE_FEEDBACK_LEARNING=true
ENABLE_TEMPORAL_PROCESSING=true

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
ENABLE_SWAGGER_UI=true
ENABLE_RELOAD=false
ENABLE_DEBUG_ENDPOINTS=false
TESTING_MODE=false
