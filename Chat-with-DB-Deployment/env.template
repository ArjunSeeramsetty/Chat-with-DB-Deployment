# Chat with DB - Environment Configuration Template
# Copy this file to .env and update the values for your deployment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
APP_ENV=production
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: "sqlite", "mssql", "postgresql"
DATABASE_TYPE=mssql

# SQLite configuration (when DATABASE_TYPE=sqlite)
DATABASE_PATH=C:/Users/arjun/Desktop/PSPreport/power_data.db

# Azure SQL Server configuration (when DATABASE_TYPE=mssql)
MSSQL_SERVER=powerflow-server
MSSQL_DATABASE=Powerflow
MSSQL_USERNAME=app_user
MSSQL_PASSWORD=your_secure_password_here
MSSQL_PORT=1433
MSSQL_TIMEOUT=30

# Azure SQL specific settings
MSSQL_ENCRYPT=true
MSSQL_TRUST_SERVER_CERTIFICATE=false
MSSQL_CONNECTION_TIMEOUT=30
MSSQL_COMMAND_TIMEOUT=30

# Alternative: Direct database URL (overrides individual settings)
# DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net:1433/database?driver=ODBC+Driver+18+for+SQL+Server&Encrypt=yes&TrustServerCertificate=no

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://your-backend-domain.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_ORIGIN=https://your-frontend-domain.com
CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# LLM provider type: "ollama", "openai", "anthropic", "vertex"
LLM_PROVIDER_TYPE=openai
LLM_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4
LLM_BASE_URL=https://api.openai.com/v1

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
# Vector DB type: "qdrant", "pgvector", "none"
VECTOR_DB_TYPE=qdrant
VECTOR_DB_PATH=power_data_vectors_enhanced
VECTOR_DB_URL=https://your-qdrant-instance.cloud
VECTOR_DB_API_KEY=your-qdrant-api-key

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
ENABLE_GPU_ACCELERATION=false
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
ENABLE_QUERY_SAFETY_CHECK=true
MAX_QUERY_LENGTH=1000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
SQL_TIMEOUT=30
MAX_ROWS=1000
ENABLE_SQL_VALIDATION=true
ENABLE_SANDBOX_TESTING=true

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_PROMETHEUS=true
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
